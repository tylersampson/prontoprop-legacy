.row
  .col-sm-4    
    = f.select :agent_id, options_for_selectize(f.object.agent), { include_blank: "Agent" }, data: { remote: agents_path, search: 'first_name_or_last_name_or_code_cont', fields: ['first_name', 'last_name'], label: 'name', value: 'id' }
  .col-sm-1
  .col-sm-4
    = f.text_field :commission_percent, layout: :default, skip_label: true, placeholder: '%'
  .col-sm-2
    = f.hidden_field :_destroy
    = link_to icon('times text-red'), '#', class: 'btn btn-sm btn-danger remove_fields'
